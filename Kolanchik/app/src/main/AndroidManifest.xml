<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kolanchik">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".GreetingActivity"
            android:label="@layout/activity_greeting">
        </activity>
        <activity android:name=".InitializationActivity"
            android:label="layout/activity_initialization">
        </activity>
        <activity android:name=".BalanceActivity"
            android:label="layout/activity_balance">
        </activity>
        <activity android:name=".ShopActivity"
            android:label="layout/activity_shop">
        </activity>
        <activity android:name=".CategoriesActivity"
            android:label="layout/activity_categories">
        </activity>
        <activity android:name=".ProductActivity"
            android:label="layout/activity_product">
        </activity>

    </application>

</manifest>