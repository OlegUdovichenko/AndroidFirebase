<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/balance"
            android:layout_width="358dp"
            android:layout_height="71dp"
            android:layout_marginTop="70dp"
            android:paddingLeft="3dp"
            android:paddingTop="7dp"
            android:text="TextView"
            android:textColor="@color/colorBlack"
            android:textSize="23sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/credits_img" />

        <ImageView
            android:id="@+id/credits_img"
            android:layout_width="220dp"
            android:layout_height="124dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/credits_img" />

        <EditText
            android:id="@+id/replenish_line"
            android:layout_width="231dp"
            android:layout_height="50dp"
            android:layout_marginTop="70dp"
            android:ems="20"
            android:gravity="center"
            android:hint="How much to refill?"
            android:inputType="numberSigned"
            android:textSize="20sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balance"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/replenish"
            android:layout_width="201dp"
            android:layout_height="70dp"
            android:layout_marginBottom="70dp"
            android:text="Replenish"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>